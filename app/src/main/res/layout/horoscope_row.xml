                    android:layout_below="@+id/makar_rashi"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/baloo"
                    android:text="@string/makr"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/kumbh_rashi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/aquarius"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/back_oval"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kumbh_rashi"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/baloo"
                    android:text="@string/kumbh"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/min_rashi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pisces"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/back_oval"
                    app:civ_border_width="2dp"
